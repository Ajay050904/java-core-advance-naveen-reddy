{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile current folder (Java)",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "${fileDirname}/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$jshint"
            ]
        }
    ]
}